<%- include('partials/header'); %> 

        <div id="register">
            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="/register" method="post">
                                <h3 class="text-center text-info">Register</h3>
                                <div class="form-group">
                                    <label for="email" class="text-info">Email:</label><br>
                                    <input type="email" name="email" id="emailk" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="password" class="text-info">Password:</label><br>
                                    <input type="password" name="password" id="password" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="password comfim" class="text-info">Password comfirm:</label><br>
                                    <input type="password" name="passwordConfirm" id="password comfirm" class="form-control">
                                </div>
                                <% if (locals.errors && locals.errors.register) { %>
                                    <% locals.errors.register.forEach(function(error) { %>
                                        <p class="alert alert-primary" role="alert"><%= error %></p>
                                    <% }) %>
                                <% } %>
                                <div class="form-group">
                                    <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                                </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    
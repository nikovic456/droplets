<%- include('partials/header'); %> 
        <div id="login">
            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="/account" method="post" enctype="multipart/form-data">
                                <h3 class="text-center text-info">My Profile</h3> 
                                <div class="form-group">
                                    <label for="email" class="text-info">Email:</label><br>
                                    <input type="email" name="email" id="email" class="form-control" value="<%= locals.user.email %>">
                                </div>
                                
                                <div class="form-group">
                                    <label for="name" class="text-info">Display Name:</label><br>
                                    <input type="text" name="displayName" id="name" class="form-control" value="<%= locals.user.displayName %>">
                                </div>
                                <div class="form-group">
                                    <label for="avatar" class="text-info">Avatar:</label><br>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="avatar" id="customFile">
                                        <label class="custom-file-label" for="customFile">Choose file</label>
                                      </div>
                                </div>
                                <p><img src="<%= locals.user.photoURL %>" alt=""></p>
                                <% if (locals.errors && locals.errors.profile) { %>
                                    <% locals.errors.profile.forEach(function(error) { %>
                                        <p class="alert alert-primary" role="alert"><%= error %></p>
                                    <% }) %>
                                <% } %>  
                                <div class="form-group">
                                    <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                                </div>
                            </form>
                        </div>                             
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('partials/footer'); %>
    